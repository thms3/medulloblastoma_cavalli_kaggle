    if dict_neighbor_parent is None:
        dict_neighbor_parent = {}

    genes = adj_mat.columns.tolist()
    
    
    dict_neighbor_parent[gene]=[genes[i]for i in np.where(adj_mat.loc[gene]!=0)[0]]
    return dict_neighbor_parent


